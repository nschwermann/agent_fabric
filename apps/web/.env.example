# Reown AppKit (get from: https://cloud.reown.com/)
NEXT_PUBLIC_REOWN_PROJECT_ID=your_reown_project_id

# App URL (optional - auto-detected from request if not set)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# x402 Payment Protocol
NEXT_PUBLIC_X402_FACILITATOR_URL=https://facilitator.cronoslabs.org/v2/x402
NEXT_PUBLIC_CRONOS_CHAIN_ID=338  # 338 for testnet, 25 for mainnet

# Database
DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/x402_marketplace

# Redis (for session nonces and caching)
REDIS_URL=redis://localhost:6379

# Session (generate with: openssl rand -base64 32)
SESSION_SECRET=your-32-character-secret-key-here

# Server RSA Keys for header encryption (generate with: pnpm generate-keys)
# Keys are in PEM format - use \n for newlines in env vars
SERVER_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
SERVER_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# MCP Server (for OAuth metadata - where clients connect for MCP traffic)
MCP_PUBLIC_URL=https://mcp.yourdomain.com
NEXT_PUBLIC_MCP_URL=https://mcp.yourdomain.com

# Payment recipient address (optional - defaults to facilitator fee recipient)
# PAYMENT_RECIPIENT_ADDRESS=0x...

# Relayer key for gasless transactions (optional - only needed if running your own relayer)
# FACILITATOR_RELAYER_KEY=0x...

# Fee configuration (optional - has sensible defaults)
# FACILITATOR_FEE_BPS=50           # 0.5% fee
# FACILITATOR_MIN_FEE=100          # 0.0001 USDC minimum
# FACILITATOR_MAX_FEE=10000        # 0.01 USDC maximum
# FACILITATOR_FEE_RECIPIENT=0x...
